<h2>Update Plan</h2>
<form></form>
<ul class="plan-list">
	{{#each plans}}
		<li>
			<input type="radio" name="plan_id" class="switch" data-id="{{id}}">
			<h3>{{name}}</h3>
			<p>${{amount}} a {{interval}}</p>
		</li>	
	{{/each}}
</ul>
<a class="pure-button alert submit-plan">Ok</a>
<a class="pure-button alert cancel-plan">Cancel</a>
