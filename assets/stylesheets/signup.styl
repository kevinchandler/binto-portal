@import "libs/pure-min.css"
@import "libs/clearfix.css"
@import 'nib'

@import 'ui/colors'
@import 'ui/typography'
@import 'ui/forms'
@import 'ui/buttons'

*
	font-family 'Cabin'

#site
	max-width : 500px;
	margin: 0 auto;
	padding : 20px 40px;
	h1
		color : darkGrey
		float : left
		margin-top .27em
		a 
			color darkGrey
			text-decoration none
	input:not([type="submit"]) 
		width: 100%;
	.pure-button
		float: right
		margin: 10px 10px 0 0

.signup-secure
	padding: 10px
	font-size: 14px
	background: rgba( green, .3 )

.login-switch
	float: right;

.message 
	background blue
	color white
	padding 10px
	font-size 15px

.error_message 
	background red
	color white
	padding 10px
	font-size 15px
	font-weight 700

.pure-u-1-3
	@media screen and ( min-width: 767px )
		div 
			padding: 10px;
		&:first-child
			div
				padding-left: 0;
		
		&:last-child 
			div
				padding-right: 0;	

.plan-list 
	list-style-type none
	margin 0 
	padding 0
	li
		position relative
		border-bottom 1px solid lightGrey
		padding 10px
		margin 0
		h3, p 
			display table
			width auto
	input[type="radio"]
		height 20px
		width 20px!important
		position absolute
		top 50%
		right: 20px
		margin-top -10px	

	